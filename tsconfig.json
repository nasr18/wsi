{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",                               
    "esModuleInterop": true,                                                        
    "forceConsistentCasingInFileNames": true,            
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "resolveJsonModule": true,
    /* Type Checking */
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"],
}